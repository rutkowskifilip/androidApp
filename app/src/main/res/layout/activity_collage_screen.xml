<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CollageActivity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/firstCollage"
        android:padding="30dp"
        android:src="@drawable/collage_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/secondCollage"
        android:padding="30dp"
        android:src="@drawable/collage_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/thirdCollage"
        android:padding="30dp"
        android:src="@drawable/collage_third"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>



</LinearLayout>